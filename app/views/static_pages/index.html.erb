<div id="home">
  <div class="container">
    <div class="home-wrap">
      <div id="home-slick">
        <div class="banner banner-1">
          <%= image_tag "Slider1.jpg", alt: t(".image_slider") %>
          <div class="banner-caption text-center">
            <h1 class="white-color font-weak"><%= t ".laptop_collection" %></h1>
          </div>
        </div>
        <div class="banner banner-1">
          <%= image_tag "Slider2.jpg", alt: t(".image_slider") %>
          <div class="banner-caption">
            <h1 class="white-color font-weak"><%= t ".laptop_collection" %></h1>
          </div>
        </div>
        <div class="banner banner-1">
          <%= image_tag "Slider3.jpg", alt: t(".image_slider") %>
          <div class="banner-caption">
            <h1 class="white-color font-weak"><%= t ".mobile_collection" %></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container filter">
  <%= render "shared/form_filter" %>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="title">
            <%= image_tag "hot-icon.gif", alt: t(".icon_hot") %>
          </h2>
          <div class="pull-right">
            <div class="product-slick-dots-2 custom-dots">
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12 col-sm-6 col-xs-6">
        <div class="row">
          <div id="product-slick-2" class="product-slick">
            <% @supports.hot_products.each do |product| %>
            <div class="product product-single text-center">
              <div class="product-thumb">
                <%= link_to image_tag(product.images.first.picture,
                  alt: t(".alt_image"), size: Settings.product.picture.size), product_path(product) %>
              </div>
              <div class="product-body">
                <h3 class="product-price">
                  <%= number_to_currency(product.price, unit: t("vnd"),
                    precision: 0, format: "%n %u") %>
                  </h3>
                <h2 class="product-name"><%= link_to product.name, product_path(product) %></h2>
                <div class="product-btns">
                  <%= link_to carts_path(product_id: product.id),
                    method: :post, remote: true, class: "primary-btn add-to-cart" do  %>
                    <i class="fa fa-shopping-cart"></i>
                    <%= t "add_to_cart" %>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
