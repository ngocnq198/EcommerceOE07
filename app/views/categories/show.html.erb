<div id="breadcrumb">
  <div class="container">
    <ul class="breadcrumb">
      <li><a href="#"><%= t "home" %></a></li>
      <li><a href="#"><%= t "product" %></a></li>
      <li><a href="#"><%= t "category" %></a></li>
    </ul>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
      <div id="aside" class="col-md-3">
        <div class="aside">
          <h3 class="aside-title"><%= t "filter_by_price" %></h3>
          <div id="price-slider"></div>
        </div>
        <div class="aside">
          <h3 class="aside-title"><%= t "ram" %></h3>
          <ul class="size-option">
            <li class="active"><a href="#">4GB</a></li>
            <li class="active"><a href="#">8GB</a></li>
            <li><a href="#">16GB</a></li>
          </ul>
        </div>
        <div class="aside">
          <h3 class="aside-title"><%= t "screene" %></h3>
          <ul class="size-option">
            <li class="active"><a href="#">15'6inch</a></li>
            <li class="active"><a href="#">14'inch</a></li>
            <li><a href="#">17'inch</a></li>
          </ul>
        </div>
        <div class="aside">
          <h3 class="aside-title"><%= t "hard disk" %></h3>
          <ul class="size-option">
            <li class="active"><a href="#">500GB</a></li>
            <li class="active"><a href="#">250GB</a></li>
            <li><a href="#">125GB</a></li>
          </ul>
        </div>
      </div>
      <div id="main" class="col-md-9">
        <div class="store-filter clearfix">
          <div class="pull-left">
            <div class="sort-filter">
              <span class="text-uppercase"><%= t "sort_by" %>:</span>
              <select class="input">
                <option value="0"><%= t "ram" %></option>
                <option value="0"><%= t "price" %></option>
                <option value="0"><%= t "rating" %></option>
              </select>
            </div>
          </div>
        </div>
        <div id="store">
          <div class="row">
            <%= render partial: "product", collection: @products %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
