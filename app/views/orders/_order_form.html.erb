<%= form_for order do |order| %>
  <%= order.hidden_field :status, value: :pending %>

  <%= order.fields_for :order_details do |order_detail| %>
    <%= order_detail.hidden_field :product_id %>
    <%= order_detail.hidden_field :quantity %>
  <% end %>

  <%= order.submit t("place_order"), class: "btn btn-primary" %>
<% end %>
